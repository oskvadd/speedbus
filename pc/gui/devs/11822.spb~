name="Computer remothe controll, on/off";
source_width=20;


// Important! event=0 is simply no event at all, you cant add a event with number 0
spb =
{
  frontend = (  {		
		type  = "label";
		label = "Start/Stop";
		row   = 0;
		},{ 
		type  = "button";
		label = "Start/Stop Computer";
		event = 1;
		row   = 2;
		},{
		type  = "label";
		label = "Reset Computer";
		row   = 3;
		},{ 
		type  = "button";
		label = "Set Temp";
		event = 2;
		row   = 4;
		}
//		,{
//		type  = "button";
//                label = "PORTC On";
