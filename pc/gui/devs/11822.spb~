//		},{
//		type  = "button";
//                label = "PORTC Off";
//                event = 10;
//                row   = 7;
//*		}
		);

  events = (   { event = 1;
               type = "send";
               data = (0x0A,3);},
	       { event = 2;
               type = "send";
               data = (0x0B,3);}

//	     { event = 9;
//               type = "send";
//               data = (0x02,0x03,0xFE);},
//	     { event = 10;
//               type = "send";
//               data = (0x02,0x03,0x00);}
                	
           );

};

	/* event types:
	   0 = shift down, with second_arg
	   1 = invert variable, second arg not used
	   2 = subtract with second arg
	   3 = add with second arg
	   4 = shift up with second arg
	   5 = And
	   6 = Or
	   7 = add, second arg is variable
	   8 = sub, second arg is variable
	*/

  operations = (

  	      // { event = 0;
